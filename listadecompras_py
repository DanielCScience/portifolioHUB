# Lista de Compras em Python

def mostrar_menu():
    print("\n=== Lista de Compras ===")
    print("1 - Adicionar item")
    print("2 - Remover item")
    print("3 - Ver lista")
    print("4 - Salvar em arquivo")
    print("5 - Sair")

def salvar_lista(lista, arquivo="lista_compras.txt"):
    with open(arquivo, "w", encoding="utf-8") as f:
        for item in lista:
            f.write(item + "\n")
    print("âœ… Lista salva em", arquivo)

def main():
    lista_compras = []

    while True:
        mostrar_menu()
        opcao = input("Escolha uma opÃ§Ã£o: ")

        if opcao == "1":
            item = input("Digite o item para adicionar: ")
            lista_compras.append(item)
            print(f"âœ… '{item}' foi adicionado.")
        
        elif opcao == "2":
            item = input("Digite o item para remover: ")
            if item in lista_compras:
                lista_compras.remove(item)
                print(f"âŒ '{item}' foi removido.")
            else:
                print("âš ï¸ Item nÃ£o encontrado na lista.")
        
        elif opcao == "3":
            print("\nğŸ“‹ Sua lista de compras:")
            if lista_compras:
                for i, item in enumerate(lista_compras, 1):
                    print(f"{i}. {item}")
            else:
                print("Lista estÃ¡ vazia.")
        
        elif opcao == "4":
            salvar_lista(lista_compras)
        
        elif opcao == "5":
            print("ğŸ‘‹ Saindo... atÃ© mais!")
            break
        
        else:
            print("âš ï¸ OpÃ§Ã£o invÃ¡lida! Tente novamente.")

if __name__ == "__main__":
    main()
